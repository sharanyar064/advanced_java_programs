-- Create the database
CREATE DATABASE Employee;

-- Use the database
USE Employee;

-- Create the Emp table
CREATE TABLE Emp (
    EmpNo INT PRIMARY KEY,
    EmpName VARCHAR(100),
    BasicSalary DOUBLE
);

-- Insert sample data into Emp table
INSERT INTO Emp (EmpNo, EmpName, BasicSalary) VALUES
(101, 'John Doe', 50000),
(102, 'Jane Smith', 60000),
(103, 'Alice Johnson', 55000);
